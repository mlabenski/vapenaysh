{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost",
	  "es2015"
    ],
	"allowJs": true,
	"strict": true,
	"noUnusedLocals": true,
	"noUnusedParameters": true,
	"jsx": "preserve",
	"jsxFactory": "h"
  },
  "include": ["./**/*.ts", "./src/**/*"],
  "compileOnSave": false
}
